<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hazira.mobilelearning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".YoutubePlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"/>
        <activity
            android:name=".VideoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ContentActivity" />
        <activity
            android:name=".M1Content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".M2Content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".M3Content"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".M1Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".M2Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".M3Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".M1Q1Activity" />
        <activity
            android:name=".Quiz1Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Quiz2Activity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>